{
	"name": "format-comment",
	"displayName": "Format Comment",
	"description": "Formats comments to fit 80 chars max on each line.",
	"version": "0.0.5",
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Formatters"
	],
	"license": "MIT",
	"publisher": "rodrigocfd",
	"repository": {
		"url": "https://github.com/rodrigocfd/format-comment.git",
		"type": "git"
	},
	"activationEvents": [
		"onCommand:format-comment.formatComment"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "format-comment.formatComment",
				"title": "Format Comment"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "^16.10.1",
		"eslint": "^7.32.0",
		"@typescript-eslint/eslint-plugin": "^4.31.2",
		"@typescript-eslint/parser": "^4.31.2",
		"glob": "^7.2.0",
		"mocha": "^9.1.2",
		"typescript": "^4.4.3",
		"vscode-test": "^1.6.1",
		"ts-loader": "^9.2.6",
		"webpack": "^5.54.0",
		"webpack-cli": "^4.8.0"
	}
}
